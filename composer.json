{
  "name": "robopuff/tinypng",
  "description": "Modern TinyPNG client for PHP",
  "type": "library",
  "license": "BSD-3-Clause",
  "keywords": [
    "tinypng", "tinyjpg", "tinify", "tiny-png", "tiny-jpg"
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.3",
    "psr/cache": "^1.0",
    "psr/http-message": "^1.0",
    "psr/log": "^1.0",
    "guzzlehttp/guzzle": "^6.3",
    "ocramius/package-versions": "^1.5"
  },
  "require-dev": {
    "paragonie/certainty": "^2.2",
    "phan/phan": "^2.4",
    "phpstan/phpstan": "^0.12",
    "phpunit/php-code-coverage": "^7.0",
    "phpunit/phpunit": "^8.5",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "TinyPng\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TinyPngTest\\": "test/"
    }
  },
  "scripts": {
    "phan": "phan --color --allow-polyfill-parser",
    "analyse": "phpstan analyse --level 7 --ansi -n ./src",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "test-integration": "phpunit --colors=always test/Integration.php",
    "test-suite": [
      "@analyse",
      "@phan",
      "@cs-check",
      "@test"
    ]
  }
}
